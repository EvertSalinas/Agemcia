= provide(:title, "Editar Cotización")

h1 style='text-align: center' Editar Cotizacion con folio: #{@quotation.id.to_s.rjust(5, "0")}

.container
  .row
    .offset-md-2.col-md-8
      .jumbotron
        = simple_form_for @quotation do |f|
          = f.input :elaboration_date, label: 'Fecha de elaboracion: '
          = f.input :event_date, label: 'Fecha de evento: '
          = f.input :name, label: 'Nombre: '
          = f.input :company, label: 'Compañía: '
          = f.input :address, label: 'Dirección: '
          = f.input :phone, label: 'Teléfono: '
          = f.input :with_iva, label: 'Con IVA: '
          = f.input :deliver_date, label: 'Fecha de entrega: '
          = f.input :deliver_time, as: :time, label: 'Hora de entrega: ',minute_step: 30
          = f.input :pickup_date, label: 'Fecha de recoger: '
          = f.input :pickup_time, as: :time, label: 'Hora de recoger: ',minute_step: 30

          = f.button :submit, 'Confirmar cambios', class: 'btn btn-primary'
        br
        p
          = link_to('Regresar', quotation_path(@quotation.id), class: 'btn btn-warning')
